# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key 

# Base URL for API calls (required for image generation and other features)
# Development: http://localhost:3000
# Production: https://podcasto.org
NEXT_PUBLIC_SITE_URL=http://localhost:3000

DATABASE_URL=postgres://postgres:[YOUR-PASSWORD]@[YOUR-PROJECT-REF].supabase.co:6543/postgres?pgbouncer=true

# Post Processing Configuration
ENABLE_POST_PROCESSING=false

# Gemini AI Configuration
GEMINI_API_KEY=your-gemini-api-key

# AWS S3 Configuration for transcript and image handling
AWS_REGION=your-aws-region
AWS_S3_BUCKET=your-bucket-name
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# AWS SES Configuration for email notifications
AWS_SES_REGION=us-east-1
AWS_SES_FROM_EMAIL=notifications@podcasto.org
AWS_SES_FROM_NAME=Podcasto
# Set to true if using SES sandbox mode (1 email/sec, 200/day limit)
# Set to false or omit for production mode (14 emails/sec, 50k/day limit)
AWS_SES_SANDBOX=true

# Email Sending Strategy (Phase 2 - Bulk Sending)
# Set to true to use SendBulkTemplatedEmail API (sends to 50 recipients per API call)
# Set to false (default) to use SendEmail API (sends one email per API call)
# Bulk sending is more efficient for podcasts with many subscribers
USE_BULK_EMAIL_SENDING=false

# Cron Secret for episode status checker
CRON_SECRET=your-secret-for-cron-endpoint

# Image Generation
IMAGE_PROMPT_TEMPLATE="Generate a rich description for a podcast cover image based on this podcast episode title: {title} and summary: {summary}"

IMAGE_GENERATION_PROMPT="Generate an image for a podcast episode cover based on the following description"